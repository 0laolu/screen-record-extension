{
    "manifest_version": 3,
    "name": "HelpMeOut Screen Recorder", 
    "description": "It records the user's screen",
    "icons": {
        "128": "./src/assets/icon-logo-128.png"
    }, 
    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "./popup.html",
        "default_icon": {
            "16": "./src/assets/icon-logo-16.png",
            "32": "./src/assets/icon-logo-32.png",
            "128": "./src/assets/icon-logo-128.png"
        }
    },

    "host_permissions": [
         "http://*/*",
         "https://*/*"
    ],

    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ], 
    "version": "1.0.0"


}